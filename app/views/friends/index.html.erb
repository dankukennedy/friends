<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

 <table table-hover table-triped>
   <thead>
     <tr> 
       <th>First Name</th>
       <th>Last Name</th>
       <th>Email</th>
       <th>Phone</th>
       <th>Twitter</th>       
       <th colspan="3"></th>       
     </tr>
   </thead>

   <tbody>
    <% @friends.each do |friend| %>
   </tbody>

 
    <%= render friend %>
    <p>
      <%= link_to "Show this friend", friend %>
    </p>
  <% end %>


<%= link_to "New friend", new_friend_path %>
</table>